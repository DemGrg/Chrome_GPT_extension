{
    "manifest_version": 2,
    "name": "OpenAI GPT-4 Extension",
    "version": "1.0",
    "description": "A Chrome extension that uses OpenAI's GPT-4 to answer questions about the current page.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }